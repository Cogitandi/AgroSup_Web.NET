@model IList<AgroSup.WebApp.ViewModels.AdminPanel.PlantViewModel>

@{
    ViewData["Title"] = "Rośliny";
}

<div class="row">
    <partial name="_AdminMenuPartial" />
    <div class="col-md-10">
        <div class="container-md mx-4">
            <!--- Content -->
            <form asp-action="SavePlants">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <button type="submit" class="float-right btn btn-primary">Zapisz</button>
                <h2 class="text-center">Rośliny dozwolne do uprawy</h2>
                <hr />
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model[0].Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model[0].EfaNitrogenRate)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @for(int i=0;i<Model.Count();i++)
                        {
                            <tr>
                                
                                <td>
                                    <input asp-for="@Model[i].Id" type="hidden" />
                                    <input asp-for="@Model[i].Delete" type="hidden" />
                                    <input asp-for="@Model[i].Name" class="form-control" />
                                </td>
                                <td>
                                    <input asp-for="@Model[i].EfaNitrogenRate" class="form-control" />
                                </td>
                                <td>
                                    <input class="btn btn-danger removePlant" type="button" value="Usuń" />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </form>
            <!--- End content -->
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $('.removePlant').click(function () {
            $(this).closest('tr').hide();
            $(this).parent().siblings().find('input[name$=Delete]').val(true);
        })
    </script>
}

