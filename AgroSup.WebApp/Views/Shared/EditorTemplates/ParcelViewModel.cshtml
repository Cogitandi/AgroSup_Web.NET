@model AgroSup.WebApp.ViewModels.Fields.ParcelViewModel

    <div class="form-row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group col-md-2">
            <label asp-for="Number" class="control-label"></label>
            <input asp-for="Number" class="form-control" />
            <span asp-validation-for="Number" class="text-danger"></span>
        </div>
        <div class="form-group col-md-2">
            <label asp-for="CultivatedArea" class="control-label"></label>
            <input asp-for="CultivatedArea" class="form-control" />
            <span asp-validation-for="CultivatedArea" class="text-danger"></span>
        </div>
        <div class="form-group col-md-2">
            <label asp-for="Operator"></label>
            <select class="form-control" asp-items="ViewBag.Operators" name="operator" title="Wybierz">
                <option selected>Brak</option>
            </select>
        </div>
        <div class="form-group col-auto align-self-end">
            <div class="form-check m-2">
                <input asp-for="FuelApplication" class="form-check-input" />
                <label asp-for="FuelApplication" class="form-check-label"></label>
            </div>
        </div>
        <div class="col-auto align-self-center">
            <button onclick="removeParcel.call(this)" class="btn btn-danger">Usuń</button>
        </div>
    </div>
